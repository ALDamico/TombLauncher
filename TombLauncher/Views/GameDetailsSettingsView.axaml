<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:TombLauncher.ViewModels.Pages.Settings"
             xmlns:dtos="clr-namespace:TombLauncher.Core.Dtos;assembly=TombLauncher.Core"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:controls="clr-namespace:TombLauncher.Controls;assembly=TombLauncher.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TombLauncher.Views.GameDetailsSettingsView"
             x:DataType="settings:GameDetailsSettingsViewModel"
             x:Name="ViewRoot">
    <Design.DataContext>
        <settings:GameDetailsSettingsViewModel />
    </Design.DataContext>
    <StackPanel Orientation="Vertical">
        <ToggleSwitch IsChecked="{Binding AskForConfirmationBeforeWalkthrough}"
                  Content="{DynamicResource 'Ask for confirmation before opening a walkthrough'}" />
        <ToggleSwitch IsChecked="{Binding UseInternalViewerIfAvailable}"
                      Content="{DynamicResource 'Use internal viewer if available'}" />
        <TextBlock Text="{DynamicResource 'Use the following patterns to recognize documentation files'}"/>
        <DockPanel LastChildFill="True">
            <controls:IconOnlyButton Icon="Clear" 
                                     ToolTip.Tip="{DynamicResource Clear}" 
                                     Command="{Binding ClearCurrentPatternCmd}" 
                                     DockPanel.Dock="Right" 
                                     Classes="btn-danger"></controls:IconOnlyButton>
            <controls:IconOnlyButton Icon="Add" 
                                     ToolTip.Tip="{DynamicResource 'Add'}" 
                                     Command="{Binding AddPatternCmd}" 
                                     DockPanel.Dock="Right" />
            <TextBox Text="{Binding CurrentPattern}"
                     Watermark="{DynamicResource 'Insert a new pattern here...'}">
                <Interaction.Behaviors>
                    <EventTriggerBehavior EventName="KeyUp">
                        <InvokeCommandAction Command="{Binding HandleKeyUpCmd}" 
                                             PassEventArgsToCommand="True"/>
                    </EventTriggerBehavior>
                </Interaction.Behaviors>
            </TextBox>
        </DockPanel>
        <ListBox ItemsSource="{Binding DocumentationPatterns}" MaxHeight="350">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DataTemplate.DataType>
                        <x:Type TypeName="dtos:CheckableItem" x:TypeArguments="system:String"/>
                    </DataTemplate.DataType>
                    <DockPanel LastChildFill="True">
                        <controls:IconOnlyButton DockPanel.Dock="Right" 
                                                 Icon="Trash" 
                                                 Classes="btn-danger" 
                                                 ToolTip.Tip="{DynamicResource Delete}" 
                                                 IsVisible="{Binding CanUserCheck}"
                                                 Command="{Binding ElementName=ViewRoot, Path=((settings:GameDetailsSettingsViewModel)DataContext).DeletePatternCmd}"
                                                 CommandParameter="{Binding .}"/>
                        <controls:IconOnlyButton DockPanel.Dock="Right" 
                                                 Icon="Edit" 
                                                 Classes="btn-primary" 
                                                 ToolTip.Tip="{DynamicResource Edit}" 
                                                 Command="{Binding ElementName=ViewRoot, Path=((settings:GameDetailsSettingsViewModel)DataContext).EditPatternCmd}"
                                                 CommandParameter="{Binding .}"
                                                 IsVisible="{Binding CanUserCheck}"
                        ></controls:IconOnlyButton>
                        <CheckBox IsChecked="{Binding IsChecked}" 
                                  IsEnabled="{Binding CanUserCheck}" 
                                  Content="{Binding Value}"/>
                        
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>