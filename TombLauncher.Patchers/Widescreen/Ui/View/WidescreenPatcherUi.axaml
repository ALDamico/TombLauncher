<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:TombLauncher.Patchers.Widescreen.Ui.ViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TombLauncher.Patchers.Widescreen.Ui.View.WidescreenPatcherUi">
    <Design.DataContext>
        <viewModel:WidescreenPatcherUiViewModel/>
    </Design.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <CheckBox Grid.Row="0" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="2" 
                  Content="{DynamicResource Apply aspect ratio correction}" 
                  IsChecked="{Binding ApplyAspectRatioCorrection}"/>
        <TextBlock Grid.Row="1" 
                   Grid.Column="0" 
                   Text="{DynamicResource Aspect ratio}"/>
        <MaskedTextBox Grid.Row="1" 
                       Grid.Column="1"
                       IsEnabled="{Binding ApplyAspectRatioCorrection}"
                       Mask="99:99" 
                       Text="{Binding AspectRatio}"/>
        <CheckBox Grid.Row="2" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="2" 
                  Content="{DynamicResource Apply camera distance correction}" 
                  IsChecked="{Binding ApplyCameraDistanceCorrection}"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource Camera distance}"/>
        <NumericUpDown ParsingNumberStyle="Integer" 
                       Grid.Row="3" 
                       Grid.Column="1" 
                       IsEnabled="{Binding ApplyCameraDistanceCorrection}" 
                       Value="{Binding CameraDistance}"/>
        <CheckBox Grid.Row="4" Grid.Column="0" Content="{DynamicResource 'Apply FOV correction'}"
                  IsChecked="{Binding ApplyFovCorrection}"
                  />
        
    </Grid>
</UserControl>
